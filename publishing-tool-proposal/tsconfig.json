{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Add this line to set the base URL for module resolution
    "paths": {
      "*": ["*"], // Map all paths relative to baseUrl
      "icons/*": ["icons/*"], // Map the icons directory
      "components/*": ["components/*"] // Map the components directory
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules" // Exclude node_modules to avoid conflicts
  ]
}
